<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- top -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/xunfanji_cefengge_bg1"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/theaderchoose_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dip"
            android:src="@drawable/x_test_notyeticon" />

        <TextView
            android:id="@+id/theaderchoose_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dip"
            android:text="你喜欢一下哪种发型"
            android:textColor="#333333"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/xunfanji_cefengge_bg2"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/choosebglayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
          style="@style/cefengge_item_marginTop"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/chooselayout_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                style="@style/cefengge_item_margin"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/tchooseone_imageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   style="@style/cefengge_item_img_bg"
                    android:background="@drawable/x_test_keybg" />

                <TextView
                    android:id="@+id/tchooseone_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_vertical"
                        android:gravity="center"
                    style="@style/cefengge_txt_marginTop"
                    android:text="选项描述"
                    android:textColor="#333333"
                    android:textSize="15sp" />

                <LinearLayout
                    android:id="@+id/bottomlayout"
                    android:orientation="horizontal"
                   style="@style/cefengge_item_bottom"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/chooselayout_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                 style="@style/cefengge_item_margin"
                 android:gravity="center_vertical"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/tchoosetwo_imageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                      style="@style/cefengge_item_img_bg"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/x_test_keybg" />

                <TextView
                    android:id="@+id/tchoosetwo_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_vertical"
                        android:gravity="center"
                     style="@style/cefengge_txt_marginTop"
                    android:text="选项描述"
                    android:textColor="#333333"
                    android:textSize="15sp" />

                <LinearLayout
                    android:id="@+id/bottomlayout"
                     android:orientation="horizontal"
                     style="@style/cefengge_item_bottom"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/chooselayout_thr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                 android:gravity="center_vertical"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/tchoosethr_imageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                       style="@style/cefengge_item_img_bg"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/x_test_keybg" />

                <TextView
                    android:id="@+id/tchoosethr_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_vertical"
                        android:gravity="center"
                   style="@style/cefengge_txt_marginTop"
                    android:text="选项描述"
                    android:textColor="#333333"
                    android:textSize="15sp" />

                <LinearLayout
                    android:id="@+id/bottomlayout"
                    android:orientation="horizontal"
              style="@style/cefengge_item_bottom" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- bottom -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/xunfanji_cefengge_bg3"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/bheaderchoose_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dip"
            android:src="@drawable/x_test_notyeticon" />

        <TextView
            android:id="@+id/bheaderchoose_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dip"
            android:text="你喜欢一下哪种发型"
            android:textColor="#333333"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/xunfanji_cefengge_bg4"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/choosebglayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
             style="@style/cefengge_item_marginTop"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/chooselayout_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 style="@style/cefengge_item_margin"
                 android:gravity="center_vertical"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/bchooseone_imageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                      style="@style/cefengge_item_img_bg"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/x_test_keybg" />

                <TextView
                    android:id="@+id/bchooseone_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_vertical"
                        android:gravity="center"
                   style="@style/cefengge_txt_marginTop"
                    android:text="选项描述"
                    android:textColor="#333333"
                    android:textSize="15sp" />

                <LinearLayout
                    android:id="@+id/bottomlayout"
                     android:orientation="horizontal"
                style="@style/cefengge_item_bottom" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/chooselayout_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                 style="@style/cefengge_item_margin"
                 android:gravity="center_vertical"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/bchoosetwo_imageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/cefengge_item_img_bg"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/x_test_keybg" />

                <TextView
                    android:id="@+id/bchoosetwo_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_vertical"
                        android:gravity="center"
                     style="@style/cefengge_txt_marginTop"
                    android:text="选项描述"
                    android:textColor="#333333"
                    android:textSize="15sp" />

               <LinearLayout
                    android:id="@+id/bottomlayout"
                     android:orientation="horizontal"
                style="@style/cefengge_item_bottom" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/chooselayout_thr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                 android:gravity="center_vertical"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/bchoosethr_imageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/cefengge_item_img_bg"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/x_test_keybg" />

                <TextView
                    android:id="@+id/bchoosethr_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_vertical"
                      style="@style/cefengge_txt_marginTop"
                    android:text="选项描述"
                    android:gravity="center"
                    android:textColor="#333333"
                    android:textSize="15sp" />

                   <LinearLayout
                    android:id="@+id/bottomlayout"
                     android:orientation="horizontal"
                style="@style/cefengge_item_bottom" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>