<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/addGridViewPopLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#80000000" >

    <LinearLayout
        android:id="@+id/show_info_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="30dip"
            android:background="@drawable/public_dialog_bar" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:text="测风格"
                android:textColor="#ffffffff" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="60dip"
            android:background="#ffffffff" 
            android:orientation="vertical">

       

            <TextView
                android:id="@+id/content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dip"
                android:layout_marginBottom="5dip"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:background="#ffffffff"
                android:text="提醒" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="30dip"
            android:background="@drawable/public_dialog_footer" >
            <Button
                android:id="@+id/button_cancle"
                android:layout_width="60dip"
                android:layout_height="25dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="50dip"
                android:background="@drawable/selector_button_gtw"
                android:text="取消"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/button_confirm"
                android:layout_width="50dip"
                android:layout_height="25dip" 
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="50dip"
                android:background="@drawable/selector_button_gtw"
                android:text="确认"
                android:textColor="#ffffff" />
        </RelativeLayout>
    </LinearLayout>

    

</RelativeLayout>