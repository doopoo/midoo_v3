<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
   
   >

    <LinearLayout
        android:id="@+id/rl"
        style="@style/book_ll_pading"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray3"
        android:gravity="center_vertical|bottom"
        android:orientation="horizontal" >

             <LinearLayout 
                   android:id="@+id/rl_book_1"
                  android:layout_width="fill_parent"
           		 android:layout_height="wrap_content"
           		 android:layout_weight="1"
           		 android:orientation="vertical"
                 >
 	 <TextView
                android:id="@+id/tv_book_state_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="已下载"
                android:gravity="center"
                 android:visibility="gone"
                android:textColor="@android:color/black"
                 />
    <RelativeLayout
          
            android:layout_width="fill_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:layout_height="wrap_content" >
	  
            <ImageView
                android:id="@+id/iv_book_img_1"
              	 android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:focusable="false"
                android:src="@drawable/chaoliuquan_photo"
                 android:gravity="center"
                android:focusableInTouchMode="false"
             />

            <TextView
                android:id="@+id/tv_book_title_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_book_img_1"
                android:layout_alignLeft="@id/iv_book_img_1"
                android:layout_alignRight="@id/iv_book_img_1"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:textColor="@android:color/white" />

            <ProgressBar
                android:id="@+id/pb_down_bar_1"
                style="@style/book_progessbar_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_book_img_1"
                android:layout_alignLeft="@id/iv_book_img_1" 
                android:layout_alignRight="@id/iv_book_img_1"
                android:layout_centerHorizontal="true"
                android:paddingBottom="15dp"
                android:visibility="gone" />


        </RelativeLayout>
                         
             </LinearLayout>
                      <LinearLayout 
                           android:id="@+id/rl_book_2"
                  android:layout_width="fill_parent"
           		 android:layout_height="wrap_content"
           		 android:layout_weight="1"
           		 android:orientation="vertical"
                 >
 	 <TextView
                android:id="@+id/tv_book_state_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="已下载"
                android:gravity="center"
                 android:visibility="gone"
                android:textColor="@android:color/black"
                 />
    <RelativeLayout
           
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
             android:layout_marginRight="5dp"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/iv_book_img_2"
              	android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/chaoliuquan_photo"
                android:focusable="false"
                  android:gravity="center"
                android:focusableInTouchMode="false"
               />

            <TextView
                android:id="@+id/tv_book_title_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_book_img_2"
                android:layout_alignLeft="@id/iv_book_img_2"
                android:layout_alignRight="@id/iv_book_img_2"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:textColor="@android:color/white" />

            <ProgressBar
                android:id="@+id/pb_down_bar_2"
                style="@style/book_progessbar_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_book_img_2"
                android:layout_alignLeft="@id/iv_book_img_2"
                android:layout_alignRight="@id/iv_book_img_2"
                android:layout_centerHorizontal="true"
                android:paddingBottom="15dp"
                 android:visibility="gone"
                 />

            <TextView
                android:id="@+id/tv_book_state_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_book_img_2"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="已下载"
                 android:visibility="gone"
                android:textColor="@android:color/black"
                 />
        </RelativeLayout>
        </LinearLayout>
                 <LinearLayout 
                      android:id="@+id/rl_book_3"
                  android:layout_width="fill_parent"
           		 android:layout_height="wrap_content"
           		 android:layout_weight="1"
           		 android:orientation="vertical"
                 >
 	 <TextView
                android:id="@+id/tv_book_state_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="已下载"
                android:gravity="center"
                 android:visibility="gone"
                android:textColor="@android:color/black"
                 />
    <RelativeLayout
           
          android:layout_width="fill_parent"
            android:layout_weight="1"
             android:gravity="center"
             android:layout_marginRight="10dp"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/iv_book_img_3"
              	android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/chaoliuquan_photo"
                android:focusable="false"
                 android:gravity="center"
                android:focusableInTouchMode="false"
                />

            <TextView
                android:id="@+id/tv_book_title_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_book_img_3"
                android:layout_alignLeft="@id/iv_book_img_3"
                android:layout_alignRight="@id/iv_book_img_3"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:textColor="@android:color/white" />

            <ProgressBar
                android:id="@+id/pb_down_bar_3"
                style="@style/book_progessbar_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_book_img_3"
                android:layout_alignLeft="@id/iv_book_img_3"
                android:layout_alignRight="@id/iv_book_img_3"
                android:layout_centerHorizontal="true"
                android:paddingBottom="15dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_book_state_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_book_img_3"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="已下载"
                 android:visibility="gone"
                android:textColor="@android:color/black"
                 />
        </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
